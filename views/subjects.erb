
<div class="subject_wrapper">
	<p>/subjects/<%= @week %>/<%= @period %></p>
	<h2>科目一覧</h2>
		<% @subjects_hash.each do |key,value| %>
			<% if (@week + @period.to_s) == key %>
				<% value.each do |subject| %>
					<p><a class="subject" data-subject="<%= subject %>" data-dp="<%= @week + @period.to_s %>" href="#">
						<%= subject %>
					</a></p>
				<% end %>
			<% end %>
		<% end %>

